{% extends "layout.twig"%}
{% block content %}
<div class="col-sm-10 content">
  <div class="row-fluid one_info">
    {{ include ("book_info.twig") }}
    <div class="clear"></div> 

    <div class="col-sm-10 col-sm-offset-2">
      {% if log.rights == 'admin' %}
        <div class="buttons bottom">
          <a href="change.php?book_id={{ info.id }}&type=image" class="btn button">
            Изменить обложку
          </a>
        </div>
        
        <div class="buttons bottom">
          <a href="change.php?book_id={{ info.id }}&type=book" class="btn button">
            Редактировать информацию о книге
          </a>
        </div>
        <div class="clear"></div>
      {% endif %}
      
      {% if log.status == true %}
       {{ include ("comment_and_mark_form.twig") }}
      {% endif %} 
    </div>
    <div class="clear"></div>
    {{ include ("tabs.twig") }}    
  </div>  
</div>
</div>
{% endblock %}