{% extends "layout.twig"%}
{% block content %}
<div class="col-sm-10 content">
  <div class="row-fluid">
    <form name="edit_book" method="post" id="book_edit">
      
      <input type="hidden" id="book_id" value="{{ info.id }}">
      
      <p class="input_name">Автор</p>
      <input type="text" id="author_old_edit" class="input_field" value="{{info.name}}" disabled>

      <p class="input_name">Название</p>
      <input type="text" id="title_old_edit" class="input_field" value="{{info.title}}" disabled>
     
      <p class="input_name">Новый автор</p>
      <input list="author" name="new_author_name" id="author_new_edit" class="input_field" placeholder="Выберите нового автора">
        <datalist id="author">
        {% for author in authors %}
          <option value="{{author.item}}"></option>
        {% endfor %}
        </datalist>

      <p class="input_name">Новое название</p>
      <input type="text" id="title_new_edit" class="input_field" placeholder="Введите новое название">

      <p class="input_name">Новый жанр</p>
      <input list="genre" id="genre_new_edit" class="input_field" placeholder="Выберите новый жанр">
        <datalist id="genre">
        {% for genre in genres %}
          <option value="{{genre.item}}"></option>
        {% endfor %}
        </datalist>

      <p class="input_name">ISBN</p>
      <input type="text" class="input_field" id="isbn_new_edit" placeholder="Введите новый ISBN">

      <p class="input_name">Новое описание</p>
      <textarea class="text_input" id="description_new_edit" placeholder="Введите новое описание">
      </textarea>

      <div class="message">
        <input type="submit" id="book_edit_btn" value="Изменить" class="btn button pull-left">
        <div id="book_edit_info"></div>
        <div class="clear"></div>
      </div>
    </form>
    <div class="clear bottom"></div>
  </div>
</div>
</div>
{% endblock %}