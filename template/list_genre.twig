{% extends "layout.twig"%}
{% block content %}
<div class="col-sm-10 Ñol-xs-12">
  {% for list in lists %}
    {% if list.numberOfBooks != 0 or log.rights == 'admin' %}
      <div class="list">
        <a class="btn-block" href="/library/list_genre.php?genre_id={{ list.id }}">
          {{ list.item }}
          <span>{{ list.numberOfBooks }}</span>
        </a>
      </div>  
    {% endif %}  
  {% endfor %}
</div> 
</div> 
{% endblock %}